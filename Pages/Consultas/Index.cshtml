@page
@model CiudadanosSanos.Pages.Consultas.IndexModel
@{
    ViewData["Title"] = "Consultas";
}
<h1>Consultas</h1>

<p>
    <a asp-page="Create" class="btn btn-success">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Consultas[0].Documento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Consultas[0].Nombres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Consultas[0].Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Consultas[0].Descripcion)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Consultas)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Documento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombres)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellidos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    <a asp-page="./Edits" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
